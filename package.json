{
  "name": "nbweb3frame",
  "version": "0.0.2",
  "description": "best web3 framework",
  "author": "punkwang",
  "private": false,
  "keywords": [
    "frameworb",
    "web3",
    "serverless",
    "standard",
    "library"
  ],
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "start:api:dev": "nest start swc --entryFile  api.app --watch",
    "start:api:debug": "nest start swc --entryFile  api.app --debug --watch",
    "start:api:prod": "node dist/api.app",
    "start:websocket:dev": "nest start swc --entryFile  websocket.app --watch",
    "start:websocket:debug": "nest start swc --entryFile  websocket.app --debug --watch",
    "start:websocket:prod": "node dist/websocket.app",
    "console:dev": "node_modules/.bin/ts-node --swc  -T src/console.app.ts",
    "console:prod": "node dist/console.app",
    "tool": "node_modules/.bin/ts-node --swc -T src/apps/tool/app.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.4",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.3.3",
    "@nestjs/sequelize": "^10.0.0",
    "@nestjs/websockets": "^10.3.3",
    "class-validator": "^0.14.1",
    "cls-hooked": "^4.2.2",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.4.4",
    "ethers": "^6.10.0",
    "i": "^0.3.7",
    "lodash": "^4.17.21",
    "md5": "^2.3.0",
    "moment-timezone": "^0.5.45",
    "mongoose": "^8.1.2",
    "mysql2": "^3.9.1",
    "nest-commander": "^3.12.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "sequelize": "^6.36.0",
    "sequelize-typescript": "^2.1.6",
    "siwe": "^2.1.4",
    "uuid": "^9.0.1",
    "web3": "^4.4.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
